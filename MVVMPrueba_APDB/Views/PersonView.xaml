<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMPrueba_APDB.Views.PersonView"
             Title="PersonView">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Label Text= "{Binding person.Name}"/>
        <Slider Maximum="100" Minimum="0"
             Value="{Binding person.Age}"/>
        <Switch IsToggled="{Binding person.Married}"/>
        <DatePicker Date="{Binding person.Birthday}"/>
        <Entry Text="{Binding person.Weight}"/>
        <TimePicker Time="{Binding person.LunchTime}"/>
    </VerticalStackLayout>
</ContentPage>